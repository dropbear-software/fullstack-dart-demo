{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile proto files",
      "type": "shell",
      "command": "dart",
      "args": [
        "run",
        "build_runner",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}/pkg/todart_api"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
    }
  ]
}